<div> class="row"> 
<div> class="col-md-3"></div>
<div> class="col-md-6"></div>
 </div>


<h1>You have updated your product list you sap!</h1>
<%= form_tag "/products/#{@product.id}", method: :post do%>

  <div>
  <%= label_tag :name %>
  <%= text_field_tag :name, @product.name, class: "form control" %>
  </div>
  <div>
  <%= label_tag :price %>
  <%= text_field_tag :price, @product.price %>
  </div>
  <div>
  <%= label_tag :description %>
  <%= text_field_tag :description, @product.description %>
  </div>
  <div>
  <%= label_tag :image, "Image URL" %>
  <%= text_field_tag :image, @product.image %>
  </div>
  <%= submit_tag "Update Product" %>
  </div>
<% end %>