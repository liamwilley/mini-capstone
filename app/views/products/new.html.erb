<h1>New Product</h1>

  <% if @product && @product.errors.any? %>
    <ul>
      <% @product.errors.full_messages.each do |message| %>
      <li class="error"><%= message %></li>
      <% end %>
    </ul>
    <% end %>
  <%= form_tag "/products", method: :post do%>

  


  <div>
  <%= label_tag :name %>
  <%= text_field_tag :name, @product.name, class: "form-control"%>
  </div>
  <div>
  <%= label_tag :price %>
  <%= text_field_tag :price, "", class: "form-control"%>
  </div>
  <div>
  <%= label_tag :description %>
  <%= text_field_tag :description, "", class: "form-control"%>
  </div>
  <div>
  <%= label_tag :image, "Image URL" %>
  <%= text_field_tag :image, "", class: "form-control"%>
  <div class="form-group">
    <%= collection_select :supplier, :supplier_id, Supplier.all, :id, :name %>
  </div>
  </div>
  <%= submit_tag "Create Product" %>
  </div>
<% end %>